<%= form_for @pin do |f| %>
	<div class="form-group">
		<label for="pin_title">Title</label>
		<%= f.text_field :title, html_options = {class: 'form-control'} %>
	</div>
	<div class="form-group">
		<label for="pin_category_id">Category</label>
		<%= f.collection_select(:category_id, Category.all, :id, :name) %>
	</div>
	<div class="form-group">
		<label for="pin_text">Enter Your Text Here:</label>
		<%= f.text_area :text, html_options = {class: 'form-control'}%>
	</div>
	<div class="form-group">
		<label for="pin_url">URL:</label>
		<%= f.text_field :url, html_options = {class: 'form-control'}%>
	</div>
	<div class="form-group">
		<label for="pin_slug">Slug:</label>
		<%= f.text_field :slug, html_options = {class: 'form-control'}%>
	</div>

	<div class="form-group">
		<%= f.submit %>
	</div>


<% end %>


